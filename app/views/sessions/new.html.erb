<h1>ログイン</h1>

<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert].html_safe %></div>
<% end %>

<%= form_with url: login_path, method: :post, data: { turbo: false } do |f| %>
  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
